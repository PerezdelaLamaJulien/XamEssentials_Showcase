<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamEssentials_Showcase.Features.Pages.EmailPage"
             Title="Emails">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="20">
            <Entry Text="{Binding MailAddress}"
                   Placeholder="Adresse Email"/>

            <Entry Text="{Binding MailSubject}"
                   Placeholder="Objet du mail"/>

            <Entry Text="{Binding MailBody}"
                   Placeholder="Coprs du mail"/>

            <Button Text="Envoyer Mail"
                        Command="{Binding SendMailCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>